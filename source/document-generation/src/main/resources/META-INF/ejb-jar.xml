<?xml version="1.0"?>

<ejb-jar
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                            http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd"
        version="3.1">

	<module-name>document-generation</module-name>

	<!--enterprise-beans/-->
	
    <!-- Session Bean Interceptor to catch all exceptions thrown by services, log the error and throw predefined exceptions to client -->
    <interceptors>
        <interceptor>
            <interceptor-class>com.electrocomponents.service.core.ServiceErrorInterceptor</interceptor-class>
        </interceptor>
    </interceptors>
	<assembly-descriptor>
		<interceptor-binding>
			<ejb-name>*</ejb-name>
			<interceptor-class>com.electrocomponents.service.core.ServiceErrorInterceptor</interceptor-class>
		</interceptor-binding>
	</assembly-descriptor>

	
</ejb-jar>
